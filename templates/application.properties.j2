# ===============================
# Spring Datasource (MySQL)
# ===============================
spring.datasource.url=jdbc:mysql://{{ db_host }}:{{ db_port }}/{{ db_name }}?useSSL=false&allowPublicKeyRetrieval=true&serverTimezone=UTC
spring.datasource.username={{ db_user }}
spring.datasource.password={{ db_password }}
spring.datasource.driver-class-name=com.mysql.cj.jdbc.Driver

# ===============================
# JPA / Hibernate
# ===============================
spring.jpa.hibernate.ddl-auto={{ hibernate_ddl_auto }}
spring.jpa.show-sql={{ hibernate_show_sql }}
spring.jpa.properties.hibernate.dialect={{ hibernate_dialect }}
spring.jpa.open-in-view={{ hibernate_open_in_view }}

# ===============================
# SQL Initialization
# ===============================
spring.sql.init.mode={{ sql_init_mode }}
spring.sql.init.schema-locations={{ sql_schema_location }}
spring.sql.init.data-locations={{ sql_data_location }}

# ===============================
# Thymeleaf
# ===============================
spring.thymeleaf.mode={{ thymeleaf_mode }}

# ===============================
# Internationalization
# ===============================
spring.messages.basename={{ messages_basename }}

# ===============================
# Actuator
# ===============================
management.endpoints.web.exposure.include={{ actuator_expose }}

# ===============================
# Server Port
# ===============================
server.port={{ app_port }}

# ===============================
# Logging
# ===============================
logging.file.name={{ log_file_name }}
logging.file.path={{ log_file_path }}
logging.level.root={{ log_level_root }}
logging.level.org.springframework={{ log_level_spring }}

# Format log entries
logging.pattern.file={{ log_pattern_file }}

# Disable container-style console logging
logging.pattern.console={{ log_pattern_console }}